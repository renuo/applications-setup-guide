{
  "rules": {
    "align": "todo",
    "ban": "todo",
    "class-name": true,
    "comment-format": "todo",
    "curly": false,
    "eofline": true,
    "forin": true,
    "indent": [true, "spaces"],
    "interface-name": "todo",
    "jsdoc-format": "todo",
    "label-position": true,
    "label-undefined": true,
    "max-line-length": [true, 140],
    "member-access": [false, "check-accessor", "check-constructor"],
    "member-ordering": [
      false,
      "todo see: http://palantir.github.io/tslint/rules/member-ordering/",
      {
        "order": "fields-first"
      }
    ],
    "new-parens": true,
    "no-angle-bracket-type-assertion": true,
    "no-any": false,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": true,
    "no-console": [true,
        "debug",
        "info",
        "time",
        "timeEnd",
        "trace"
    ],
    "no-construct": true,
    "no-debugger": true,
    "no-default-export": true,
    "no-duplicate-key": true,
    "no-duplicate-variable": true,
    "no-empty": [false, "TODO"],
    "no-eval": true,
    "no-inferrable-types": true,
    "no-internal-module": [false, "TODO"],
    "no-invalid-this": true,
    "no-namespace":  [false, "TODO"],
    "no-null-keyword": false,
    "no-reference": false,
    "no-require-imports": true,
    "no-shadowed-variable": true,
    "no-string-literal": true,
    "no-switch-case-fall-through": true,
    "no-trailing-whitespace": true,
    "no-unreachable": true,
    "no-unused-expression": true,
    "no-unused-variable": true,
    "no-use-before-declare": true,
    "no-var-keyword": true,
    "no-var-requires": true,
    "object-literal-sort-keys": [false, "TODO"],
    "one-line": [true,
        "check-catch",
        "check-else",
        "check-finally",
        "check-open-brace",
        "check-whitespace"
    ],
    "one-variable-per-declaration": true,
    "quotemark": [true, "single", "jsx-single", "avoid-escape"],
    "radix": true,
    "semicolon": [true, "always"],
    "switch-default": true,
    "trailing-comma": [true, {
      "multiline": "never",
      "singleline": "never"
    }],
    "triple-equals": [true, "allow-null-check"],
    "typedef": [
      true,
      "ignore call-signature",
      "ignore arrow-parameter",
      "ignore property-declaration",
      "ignore variable-declaration",
      "member-variable-declaration",
      "parameter"
    ],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "parameter": "nospace",
        "arrow-parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace",
        "member-variable-declaration": "nospace"
      },
      {
        "call-signature": "nospace",
        "parameter": "nospace",
        "arrow-parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace",
        "member-variable-declaration": "nospace"
      }
    ],
    "use-isnan": true,
    "use-strict": true,
    "variable-name": [
      true,
      "check-format",
      "ignore allow-leading-underscore",
      "ignore allow-trailing-underscore",
      "ignore allow-pascal-case",
      "ban-keywords"
    ],
    "whitespace": [false,
        "check-branch",
        "check-decl",
        "check-operator",
        "check-module",
        "check-separator",
        "check-type",
        "check-typecast"
    ]
  }
}
